# /etc/profile - config for init-shell
#
export HISTFILE=/tmp/.ash_history.$USER.$PPID

# some 'tslib' related settings for this platform
export TSLIB_TSDEVICEFLAGS=RDONLY
export TSLIB_CONSOLEDEVICE=none
export TSLIB_TSDEVICE=/dev/input/event0

# mouse/display settings for Qt
export QWS_MOUSE_PROTO="tslib:/dev/input/event0"
if [ -e "/sys/class/misc/guf_xml/configurationFile/variables/display/rotation/value" ]; then
	read ROTATION < /sys/class/misc/guf_xml/configurationFile/variables/display/rotation/value
	if [ "$ROTATION" = "90" ]; then
		ROTATION="270"
	elif [ "$ROTATION" = "270" ]; then
		ROTATION="90"
	fi
	export QWS_DISPLAY=transformed:rot$ROTATION
fi

# This fixes the backspace when telnetting in.
if [ "$TERM" != "linux" ]; then
        stty erase ^H
fi

# source this file for subsequent shells, too
# (will also be sourced for init-shell)
export ENV=/etc/profile.environment

# Exec local profile
if [ -e "/etc/profile.local" ]; then
	echo "running /etc/profile.local"
	. /etc/profile.local
fi
